@model IEnumerable<MyContacts.Models.Call>


<h1>Calls history</h1>

<p>
    <a asp-action="Create">Make a call</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.From.PhoneNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.To.PhoneNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-action="Statisticredirection" asp-route-id="@item.Id">Show statistic for this number</a>
                </td>
            </tr>
        }
    </tbody>
</table>