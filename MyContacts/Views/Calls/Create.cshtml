@model MyContacts.Models.Call

<h1>Make a call</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="To" class="control-label"></label>
                <input asp-for="To.PhoneNum" class="form-control" />
                <span asp-validation-for="To.PhoneNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Call" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to call list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}