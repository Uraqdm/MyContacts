@model MyContacts.ViewModels.PhoneNumberViewModel

@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>


    <h1>Add new phone number</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Enter">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PhoneNum" class="control-label"></label>
                    <input asp-for="PhoneNum" class="form-control" />
                    <span asp-validation-for="PhoneNum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sign in" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
