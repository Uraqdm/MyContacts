@model IEnumerable<MyContacts.Models.PhoneNumber>


<h1>All phone numbers</h1>

<p>
    <a asp-action="AddNewNumber">Add new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNum)
                </td>
                <td>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="@item.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                    </form>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <form asp-action="Call">
                        <input type="hidden" asp-for="@item.Id" />
                        <input type="submit" value="Call" class="btn btn-info" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>